{
  "manifest_version": 2,
  "name": "ImageBlock",
  "version": "1.0",

  "description": "Selectively block or grayscale all images on websites",

  "browser_specific_settings": {
    "gecko": {
      "id": "imageblock@clip.rip",
      "strict_min_version": "58.0"
    }
  },

  "icons": {
    "48": "icons/48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["imageblock.js"],
      "css": ["imageblock.css"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "tabs"],

  "browser_action": {
    "default_icon": "icons/48.png",
    "default_title": "ImageBlock",
    "default_popup": "popup/popup.html"
  }
}
